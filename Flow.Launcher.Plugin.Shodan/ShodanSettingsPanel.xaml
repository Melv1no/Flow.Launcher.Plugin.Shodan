<UserControl x:Class="Flow.Launcher.Plugin.Shodan.ShodanSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800">
    <StackPanel Margin="20">
        <TextBlock x:Name="SettingsTitleTextBlock"
                   Text="Shodan API Settings" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>
        
        <TextBlock x:Name="ApiKeyLabelTextBlock"
                   Text="API Key:" 
                   Margin="0,10,0,5"/>
        <TextBox x:Name="ApiKeyTextBox" 
                 Width="400" 
                 HorizontalAlignment="Left"
                 Padding="5"/>
        
        <TextBlock x:Name="ApiKeyHintTextBlock"
                   Text="Get your API key from: https://account.shodan.io/" 
                   Margin="0,5,0,0"
                   FontSize="11"
                   Foreground="Gray"/>
        
        <Button x:Name="SaveButton" 
                Content="Save" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Left" 
                Margin="0,20,0,0"
                Click="SaveButton_Click"/>
    </StackPanel>
</UserControl>
